<div class="input-group mb-3 in-page-search width-33">
  <input type="text" class="form-control bg-lgrey in-page-search-field border-white shadow-sm" placeholder="Search the knowledge base." aria-label="#" aria-describedby="basic-addon2">
  <div class="input-group-append">
    <button class="btn btn-light border rounded-0 bg-lgrey in-page-search-btn border-white shadow-sm" type="button" id="button-addon2">Search</button>
  </div>
</div>

<div class="container bg-white border rounded content-container"> 

	<div class="mt-0">
		<%= render partial: 'form', locals: {question: Question.new} %>
	</div>

	<% @questions.each do |question| %>
	<hr class='mt-0'>
		<div class="d-flex">
			<div class="d-flex justify-content-around">
				<div class='d-flex flex-column align-items-center mr-3'>
					<h6 class='mb-1'>0</h6>
					<p class='mb-1 font-weight-light'>Votes</p>
				</div>
				<div class='d-flex flex-column align-items-center mr-3'>
					<h6 class='mb-1'><%= question.answers&.count%></h6>
					<p class='mb-1 font-weight-light'>Answers</p>
				</div>
				<div class='d-flex flex-column align-items-center mr-5'>
					<h6 class='mb-1'><%= question.comments&.count %></h6>
					<p class='mb-3 font-weight-light'>Comments</p>
				</div>
			</div>
			<div class="d-flex">
				<%= link_to(question_path(question)) do %> 
					<h5><%= question.title %></h5>
				<% end %>
			</div>
		</div>
	<% end %>
</div>

