<main class='container bg-white border rounded'>
	<section class="row">
		<div class='col'>
			<h1 class='mt-4'><%=@project.title%></h1>
			<%= link_to('Edit', edit_project_path(@project)) %>
			<%= link_to('Delete', project_path(@project), method: :delete, data: {confirm: 'Are you sure?'}) %>

			<div class='sections row mt-3'>
				<div class='h-timeline'>
					<div class='timeline_tall ml-4'></div>
				</div>
				<div class='col-11'>
					<div class='accordion' id='sectionAccordion'>
						<% @project.sections.each do |section| %>
							<div class="card">
								<div class="card-header" id='header_<%=section.id.to_s%>'>
									<div class="timeline_vitem dot">
									</div>
										<h5 class='mb-0'>
											<button class="btn btn-link" type='button' data-toggle='collapse' data-target='#collapse_<%=section.id.to_s%>' aria-expanded='true' aria-controls='collapse_<%=section.id.to_s%>'>
												<%= section.title %> 										
											</button>
											
										</h5>

								
								</div>
								<div class="collapse" id='collapse_<%=section.id.to_s%>' aria-labelledby='header_<%=section.id.to_s%>' data-parent='#sectionAccordion'>
									<div class="card-body">
										<%= link_to('View', project_section_path(@project, section)) %>
										<%= link_to('Edit', edit_project_section_path(@project, section)) %>
										<%= link_to('Delete', project_section_path(@project, section), method: :delete, data: {confirm: 'Are you sure?'}) %>
										<div class="d-flex justify-content-end">
											<%= section.tasks.each do |task| %>
												<%= task.title %>
											<% end %>
										</div>
									</div>
								</div>
							</div>	
						<% end %> 
						<div class="final_item mt-2">
							<div class='timeline_vitem dot last_item'></div><h6>End of course. Completion Date <%=@project.completion_date%></h6>
						</div>
					</div>
				</div>
			</div>
		</div>

		
	</section>

	<p> <%= render partial: 'sections/form', locals: { project: @project, section: Section.new }%> </p>


	<%= link_to 'Create a new section.', new_project_section_path(@project, Section.new),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>
	<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog" role="document">
			    <div class="modal-content"></div>
		  </div>
	</div>

</main>

<aside class='col-sm-3 container'>
	<%= render partial: 'calendar' %>
</aside>